<%inherit file="base.tmpl"/>

<%block name="extra_head">
  ${parent.extra_head()}
  <%include file="includes/header.tmpl"/>
</%block>

<%block name="my_content">
  <div class="panel panel-default">
    <div class="panel-heading">
      <i class="fa fa-file-text-o" aria-hidden="true"></i>
      Posts
    </div>

    <ul class="list-group">
      % if posts:
      % for post in posts:
        <a href="${post.permalink()}" class="list-group-item">
          <h4 class="list-group-item-heading">${post.title()}</h4>
          <p class="list-group-item-text">
            <small>
              <span class="glyphicon glyphicon-calendar"></span>
              ${post.formatted_date(date_format)}
            </small>
          </p>
            <small>
              ${post.description()}
            </small>
          </p>
        </a>
      % endfor
      % else:
        No posts
      % endif
    </ul>
  </div>
</%block>

<%block name="content">
  <%include file="includes/content.tmpl" args="content=self.my_content"/>
  <%include file="includes/js/keybindings.tmpl"/>
</%block>
